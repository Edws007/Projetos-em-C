#include <stdio.h>

int main(){

	int valor1, valor2, valor3, soma = 0;

	printf("Informe o valor 1: ");
	fflush(stdout);
	scanf("%d", &valor1);

	printf("Informe o valor 2: ");
	fflush(stdout);
	scanf("%d", &valor2);

	printf("Informe o valor 3: ");
	fflush(stdout);
	scanf("%d", &valor3);

	soma = valor1 + valor2 + valor3;

	printf("A soma dos valores informados Ã©: %d", soma);

	return 0;
