#include <stdio.h>

int main(){//A chave delimita um bloco de código (início do bloco)
	//Declarando variáveis
	int idade; //inteiro

	//declarando e inicializando variáveis
	//int idade = 0;

	//Função para escrever algo na saída padrão
	printf("Qual é a sua idade?");//o ponto e virgula finaliza um comando

	fflush(stdout);

	//Receber dados
	scanf("%d", &idade);

	//Saída
	printf("A sua idade é %d", idade);

	return 0;
}//Fim do bloco
