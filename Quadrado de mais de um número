#include <stdio.h>

int main(){
	int num1, num2, num3, soma = 0;

	printf("Digite o valor 1: \n");
	fflush(stdout);
	scanf("%d", &num1);

	printf("Digite o valor 2: \n");
	fflush(stdout);
	scanf("%d", &num2);

	printf("Digite o valor 3: \n");
	fflush(stdout);
	scanf("%d", &num3);

	soma = (num1 * num1) + (num2 * num2) + (num3 * num3);

	printf("A soma dos quadrados Ã©: %d", soma);
	return 0;
}
