#include <stdio.h>

int main(){

	float nota1, nota2, nota3, nota4, media = 0;

	printf("Insira a primeira nota: ");
	fflush(stdout);
	scanf("%f", &nota1);

	printf("Insira a segunda nota: ");
	fflush(stdout);
	scanf("%f", &nota2);

	printf("Insira a terceira nota: ");
	fflush(stdout);
	scanf("%f", &nota3);

	printf("Insira a quarta nota: ");
	fflush(stdout);
	scanf("%f", &nota4);

	media = (nota1 + nota2 + nota3 + nota4) / 4;

	printf("A média aritmética é  %.2f", media);

	return 0;
}
